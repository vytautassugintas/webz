{
  "name": "demo-saas",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Vytautas Sugintas",
  "license": "MIT",
  "private": false,
  "devDependencies": {
    "autoprefixer": "^9.6.0",
    "live-server": "^1.2.1",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.2",
    "typescript": "^3.5.2"
  },
  "scripts": {
    "live-server": "live-server --watch=dist --port=1337",
    "build-task:scss-compile": "node-sass *.scss -o dist",
    "build-task:autoprefixer": "postcss dist/*.css --use autoprefixer -d dist",
    "ts:build": "tsc",
    "ts:watch": "nodemon -e ts --exec 'yarn ts:build'",
    "sass:build": "npm-run-all -p build-task:*",
    "sass:watch": "nodemon -e scss --exec 'yarn sass:build'",
    "dev": "npm-run-all -p live-server sass:* ts:*"
  }
}
